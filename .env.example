APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

# PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=partyhelp
DB_USERNAME=partyhelp
DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
MEDIA_DISK=spaces
MEDIA_MAX_WIDTH=1920
MEDIA_OUTPUT_FORMAT=jpeg

# DigitalOcean Spaces (S3-compatible) for media uploads
DO_SPACES_KEY=
DO_SPACES_SECRET=
DO_SPACES_ENDPOINT=https://syd1.digitaloceanspaces.com
DO_SPACES_REGION=syd1
DO_SPACES_BUCKET=partyhelp-bucket
DO_SPACES_URL=https://partyhelp-bucket.syd1.digitaloceanspaces.com

QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Email: Mailgun (API; DO blocks SMTP). For EU use MAILGUN_ENDPOINT=api.eu.mailgun.net
MAIL_MAILER=mailgun
MAILGUN_DOMAIN=your-domain.mailgun.org
MAILGUN_SECRET=key-xxxxxxxx
# MAILGUN_ENDPOINT=api.mailgun.net

MAIL_FROM_ADDRESS="venues@partyhelp.com.au"
MAIL_FROM_NAME="Johnny @ Partyhelp"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Stripe - Get real keys from Stripe Dashboard → Developers → API keys (use test keys for sandbox)
# STRIPE_MODE=sandbox uses *_SANDBOX keys, STRIPE_MODE=live uses *_LIVE keys
STRIPE_MODE=sandbox
STRIPE_KEY_SANDBOX=pk_test_xxxxxxxxxxxxxxxx
STRIPE_SECRET_SANDBOX=sk_test_xxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET_SANDBOX=
STRIPE_KEY_LIVE=pk_live_xxxx
STRIPE_SECRET_LIVE=sk_live_xxxx
STRIPE_WEBHOOK_SECRET_LIVE=
STRIPE_CURRENCY=aud

# Twilio WhatsApp. TWILIO_MODE=sandbox uses *_SANDBOX keys; TWILIO_MODE=live uses *_LIVE keys.
# Sandbox: use Twilio WhatsApp Sandbox "from" number (e.g. +14155238886) and join the sandbox to test.
TWILIO_MODE=sandbox
TWILIO_SID_SANDBOX=
TWILIO_AUTH_TOKEN_SANDBOX=
TWILIO_WHATSAPP_FROM_SANDBOX=whatsapp:+14155238886
TWILIO_SID_LIVE=
TWILIO_AUTH_TOKEN_LIVE=
TWILIO_WHATSAPP_FROM_LIVE=whatsapp:+14155238886
# Content Template SID for lead opportunity Accept/Ignore message (create in Twilio Content Template Builder). See docs/TWILIO_WHATSAPP_LEAD_OPPORTUNITY.md
TWILIO_LEAD_OPPORTUNITY_CONTENT_SID=

# BigQuery (daily sync for reporting). See docs/BIGQUERY_SETUP.md for GCP and credentials setup.
BIGQUERY_CREDENTIALS_PATH=storage/app/bigquery-credentials.json
BIGQUERY_PROJECT_ID=partyhelp-bigquery
BIGQUERY_DATASET=partyhelp_reporting
